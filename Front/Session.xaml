<Window
    x:Class="Front.Session"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Front"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Session"
    Width="400"
    Height="450"
    mc:Ignorable="d">
    <Grid Margin="0,0,0,-116" Background="White">
        <Border Margin="0,0,0,350" CornerRadius="8,8,8,8">
            <Border.Background>
                <ImageBrush ImageSource="/Insignia Brillante Logo Tienda de Etsy Ícono.png" Stretch="Fill" />
            </Border.Background>
        </Border>
        <TextBox
            x:Name="TxtUsuario"
            Height="50"
            Margin="70,222,70,244"
            materialDesign:HintAssist.Foreground="#00695c"
            materialDesign:HintAssist.Hint="Nombre de Usuario"
            AcceptsReturn="True"
            BorderBrush="#00695c"
            BorderThickness="2"
            Style="{StaticResource MaterialDesignOutlinedTextBox}" />
        <TextBox
            x:Name="TxtContrasena"
            Height="50"
            Margin="70,309,70,157"
            materialDesign:HintAssist.Foreground="#00695c"
            materialDesign:HintAssist.Hint="Contraseña"
            AcceptsReturn="True"
            BorderBrush="#00695c"
            BorderThickness="2"
            Cursor="Arrow"
            InputScope="Password"
            Style="{StaticResource MaterialDesignOutlinedTextBox}" />

        <Button x:Name="BtnAceptar"
            Margin="31,445,237,39"
            Background="#00695c"
            BorderBrush="Transparent"
            Content="Aceptar"
            IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}"
            ToolTip="Resource name: MaterialDesignRaisedLightDarkButton" Click="BtnAceptar_Click" />
        <Button x:Name="BtnCerrarForm"
            Margin="232,445,36,39"
            Background="#00695c"
            BorderBrush="Transparent"
            Content="Cerrar"
            IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Window}}}"
            ToolTip="Resource name: MaterialDesignRaisedLightDarkButton" Click="BtnCerrarForm_Click" />
    </Grid>
</Window>
