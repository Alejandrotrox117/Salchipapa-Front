<UserControl
    x:Class="Front.Views.Pedidos.FormPedidos"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Front.Views.Pedidos"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Width="800"
    Height="400"
    mc:Ignorable="d">
    <Grid Background="White">
        <StackPanel Width="800" Height="400">
            <Grid Height="400">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition />
                    <RowDefinition Height="120" />
                    <RowDefinition Height="120" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <!--#region Titulo formulario-->
                <TextBlock
                    Grid.Row="0"
                    Grid.Column="0"
                    Grid.ColumnSpan="2"
                    FontSize="18"
                    FontWeight="Bold"
                    Foreground="#00695c"
                    Text="Editar Pedidos"
                    TextAlignment="Center" />
                <!--#endregion-->
                <TextBlock
                    Grid.Row="1"
                    Grid.Column="0"
                    Margin="91,49,58,63"
                    FontSize="18"
                    FontWeight="Bold"
                    Foreground="#00695c"
                    Text="Productos del pedido actual" />
                <ListBox
                    Grid.Row="1"
                    Grid.Column="1"
                    Width="244"
                    Margin="24,9,0,10"
                    HorizontalAlignment="Left"
                    ScrollViewer.VerticalScrollBarVisibility="Visible">
                    <ListBox.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Orientation="Vertical" />
                        </ItemsPanelTemplate>
                    </ListBox.ItemsPanel>
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <materialDesign:Card Width="200">
                                <Expander
                                    Width="200"
                                    Height="50"
                                    materialDesign:ExpanderAssist.HeaderFontSize="12"
                                    Header="Batido de oreo"
                                    IsExpanded="True">
                                    <Expander.Content>
                                        <StackPanel>
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition />
                                                    <ColumnDefinition />
                                                </Grid.ColumnDefinitions>
                                                <CheckBox Grid.Column="0" />
                                                <TextBlock Grid.Column="1" Text="Chispa" />
                                            </Grid>
                                        </StackPanel>
                                    </Expander.Content>
                                </Expander>
                            </materialDesign:Card>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
                <ComboBox
                    Name="CbCategoria"
                    Grid.Row="2"
                    Grid.Column="0"
                    Height="52"
                    Margin="40,14,200,0"
                    VerticalAlignment="Top"
                    materialDesign:HintAssist.Foreground="#00695c"
                    materialDesign:HintAssist.Hint="Categoria"
                    BorderBrush="#00695c"
                    BorderThickness="2"
                    Style="{StaticResource MaterialDesignOutlinedComboBox}" />
                <Button
                    Grid.Row="2"
                    Margin="273,70,0,10"
                    HorizontalAlignment="Left"
                    Background="#00695c"
                    BorderBrush="Transparent"
                    Style="{StaticResource MaterialDesignFloatingActionMiniButton}">
                    <materialDesign:PackIcon
                        Width="30"
                        Height="30"
                        Foreground="White"
                        Kind="Plus" />
                </Button>
                <TextBlock
                    Grid.Row="1"
                    Grid.RowSpan="2"
                    Grid.ColumnSpan="2"
                    Margin="323,126,0,101"
                    HorizontalAlignment="Left"
                    FontSize="17"
                    FontWeight="Bold"
                    Foreground="#00695c"
                    Text="Agregar más productos" />
                <ListBox
                    Grid.Row="2"
                    Grid.RowSpan="2"
                    Grid.ColumnSpan="2"
                    Width="228"
                    Margin="379,24,0,98"
                    HorizontalAlignment="Left"
                    ScrollViewer.VerticalScrollBarVisibility="Visible">
                    <ListBox.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Orientation="Vertical" />
                        </ItemsPanelTemplate>
                    </ListBox.ItemsPanel>
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Expander
                                Width="200"
                                Height="50"
                                materialDesign:ExpanderAssist.HeaderFontSize="12"
                                Header="Batido de oreo"
                                IsExpanded="True">

                                <StackPanel>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition />
                                            <ColumnDefinition />
                                        </Grid.ColumnDefinitions>
                                        <CheckBox Grid.Column="0" />
                                        <TextBlock Grid.Column="1" Text="Chispas" />
                                    </Grid>
                                </StackPanel>
                            </Expander>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                    a
                </ListBox>
                <ComboBox
                    x:Name="CbCategoria_Copy"
                    Grid.Row="2"
                    Grid.RowSpan="2"
                    Grid.Column="0"
                    Height="52"
                    Margin="40,99,200,0"
                    VerticalAlignment="Top"
                    materialDesign:HintAssist.Foreground="#00695c"
                    materialDesign:HintAssist.Hint="Productos"
                    BorderBrush="#00695c"
                    BorderThickness="2"
                    Style="{StaticResource MaterialDesignOutlinedComboBox}" />





            </Grid>
        </StackPanel>
    </Grid>
</UserControl>
