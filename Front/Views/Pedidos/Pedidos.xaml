<UserControl
    x:Class="Front.Views.Pedidos.Pedidos"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:caja="clr-namespace:Front.Views.Caja"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Front.Views.Pedidos"
    xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:materialDesignMahApps="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:system="clr-namespace:System;assembly=mscorlib"
    Width="800"
    Height="600"
    mc:Ignorable="d">
    <Grid
        Name="GridContenido"
        Background="White"
        Loaded="Grid_Loaded">
        <!--#region TABITEM-->
        <TabControl
            Margin="0,0,0,10"
            HorizontalContentAlignment="Left"
            materialDesign:ColorZoneAssist.Background="White"
            materialDesign:ColorZoneAssist.Mode="Light">
            <TabItem Header="Entrantes">
                <ScrollViewer
                    CanContentScroll="True"
                    FlowDirection="LeftToRight"
                    HorizontalScrollBarVisibility="Hidden"
                    VerticalScrollBarVisibility="Auto">
                    <ItemsControl
                        x:Name="itemCardFlipper"
                        Width="795"
                        Background="White"
                        ItemsSource="{Binding Orders}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel Orientation="Horizontal" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <StackPanel
                                    Width="230"
                                    Height="340"
                                    Margin="0,50,0,40"
                                    Background="WhiteSmoke">
                                    <Grid Height="330">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="50" />
                                            <RowDefinition Height="*" />
                                        </Grid.RowDefinitions>
                                        <materialDesign:Flipper
                                            Grid.Row="1"
                                            Width="230"
                                            Height="330"
                                            Background="WhiteSmoke"
                                            BorderBrush="#00695c"
                                            IsFlipped="False">
                                            <materialDesign:Flipper.FrontContent>
                                                <materialDesign:Card Width="200" Height="256">
                                                    <Grid>
                                                        <Grid.RowDefinitions>
                                                            <RowDefinition Height="25" />
                                                            <RowDefinition Height="90" />
                                                            <RowDefinition Height="25" />
                                                            <RowDefinition Height="15" />
                                                            <RowDefinition Height="40" />
                                                        </Grid.RowDefinitions>
                                                        <materialDesign:PackIcon
                                                            Grid.Row="0"
                                                            Width="22"
                                                            Height="22"
                                                            Margin="0,4,70,0"
                                                            HorizontalAlignment="Center"
                                                            Foreground="#00695c"
                                                            Kind="Silverware" />
                                                        <TextBlock
                                                            Grid.Row="0"
                                                            FontSize="20"
                                                            Style="{StaticResource TexblockColor}"
                                                            Text="Mesa"
                                                            TextAlignment="Center" />
                                                        <TextBlock
                                                            Grid.Row="1"
                                                            FontSize="50"
                                                            Style="{StaticResource TexblockColor}"
                                                            Text="{Binding origin}"
                                                            TextAlignment="Center" />
                                                        <TextBlock
                                                            Grid.Row="2"
                                                            FontSize="14"
                                                            FontWeight="DemiBold"
                                                            Foreground="#00695c"
                                                            Text="Estatus"
                                                            TextAlignment="Center" />
                                                        <TextBlock
                                                            Grid.Row="3"
                                                            FontSize="10"
                                                            FontWeight="DemiBold"
                                                            Foreground="#00695c"
                                                            Text="20min"
                                                            TextAlignment="Center" />
                                                        <StackPanel
                                                            Grid.Row="4"
                                                            HorizontalAlignment="Center"
                                                            VerticalAlignment="Center">
                                                            <Button
                                                                Margin="0,4,0,0"
                                                                Background="#00695c"
                                                                Command="{x:Static materialDesign:Flipper.FlipCommand}"
                                                                Content="Ver detalles"
                                                                Foreground="White"
                                                                Style="{StaticResource MaterialDesignFlatButton}" />
                                                        </StackPanel>
                                                    </Grid>
                                                </materialDesign:Card>
                                            </materialDesign:Flipper.FrontContent>
                                            <materialDesign:Flipper.BackContent>
                                                <Grid>
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="110" />
                                                        <RowDefinition Height="*" />
                                                    </Grid.RowDefinitions>
                                                    <materialDesign:ColorZone
                                                        Grid.Row="0"
                                                        Padding="2"
                                                        VerticalAlignment="Top"
                                                        Background="#00695c"
                                                        FontWeight="Bold"
                                                        Foreground="White">
                                                        <StackPanel Orientation="Horizontal">
                                                            <Button
                                                                HorizontalAlignment="Left"
                                                                Command="{x:Static materialDesign:Flipper.FlipCommand}"
                                                                Style="{StaticResource MaterialDesignToolForegroundButton}">
                                                                <materialDesign:PackIcon HorizontalAlignment="Right" Kind="ArrowLeft" />
                                                            </Button>
                                                            <TextBlock
                                                                Margin="8,0,0,0"
                                                                VerticalAlignment="Center"
                                                                Text="Volver" />
                                                        </StackPanel>
                                                    </materialDesign:ColorZone>
                                                    <ListBox
                                                        Grid.Row="1"
                                                        Width="230"
                                                        Height="300"
                                                        Margin="0,-65,0,0"
                                                        materialDesign:ScrollViewerAssist.CornerRectangleVisibility="Visible"
                                                        BorderBrush="Transparent"
                                                        BorderThickness="1"
                                                        ItemsSource="{Binding products}"
                                                        ScrollViewer.VerticalScrollBarVisibility="Visible">
                                                        <ListBox.ItemsPanel>
                                                            <ItemsPanelTemplate>
                                                                <WrapPanel Orientation="Vertical" />
                                                            </ItemsPanelTemplate>
                                                        </ListBox.ItemsPanel>
                                                        <ListBox.ItemTemplate>
                                                            <DataTemplate>
                                                                <Expander>
                                                                    <Expander.Header>
                                                                        <TextBlock
                                                                            Width="140"
                                                                            Foreground="#00695c"
                                                                            Text="{Binding name}" />
                                                                    </Expander.Header>
                                                                    <Expander.Content>
                                                                        <ListBox ItemsSource="{Binding toppings}">
                                                                            <ListBox.ItemsPanel>
                                                                                <ItemsPanelTemplate>
                                                                                    <WrapPanel Orientation="Vertical" />
                                                                                </ItemsPanelTemplate>
                                                                            </ListBox.ItemsPanel>
                                                                            <ListBox.ItemTemplate>
                                                                                <DataTemplate>
                                                                                    <TextBlock Text="{Binding name}" />
                                                                                </DataTemplate>
                                                                            </ListBox.ItemTemplate>
                                                                        </ListBox>
                                                                    </Expander.Content>
                                                                </Expander>
                                                            </DataTemplate>
                                                        </ListBox.ItemTemplate>

                                                    </ListBox>
                                                </Grid>
                                            </materialDesign:Flipper.BackContent>
                                        </materialDesign:Flipper>
                                    </Grid>
                                </StackPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>

                    </ItemsControl>
                </ScrollViewer>
            </TabItem>
            <TabItem Header="Finalizados">
                <!--<ItemsControl>
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>

                </ItemsControl>-->
            </TabItem>
        </TabControl>
        <!--#endregion TabItem-->
    </Grid>
</UserControl>