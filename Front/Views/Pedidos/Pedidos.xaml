<UserControl
    x:Class="Front.Views.Pedidos.Pedidos"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Front.Views.Pedidos"
    xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:materialDesignMahApps="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:system="clr-namespace:System;assembly=mscorlib"
    Width="800"
    Height="600"
    mc:Ignorable="d">
    <Grid
        Name="GridContenido"
        Background="White"
        Loaded="Grid_Loaded">
        <!--#region TABITEM-->

        <TabControl
            Margin="0,0,0,10"
            HorizontalContentAlignment="Left"
            materialDesign:ColorZoneAssist.Background="GhostWhite"
            materialDesign:ColorZoneAssist.Mode="Light"
            Style="{StaticResource MaterialDesignFilledTabControl}">
            <TabItem Header="Entrantes">
                <ScrollViewer
                    CanContentScroll="True"
                    FlowDirection="LeftToRight"
                    HorizontalScrollBarVisibility="Hidden"
                    VerticalScrollBarVisibility="Auto">
                    <ItemsControl
                        x:Name="itemCardFlipper"
                        Width="795"
                        ItemsSource="{Binding Orders}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel Orientation="Horizontal" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <materialDesign:Card
                                    Grid.Row="1"
                                    Width="250"
                                    Height="340"
                                    Margin="10,30,0,0">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="55" />
                                            <RowDefinition Height="450" />
                                        </Grid.RowDefinitions>
                                        <materialDesign:Flipper
                                            Grid.Row="0"
                                            IsFlipped="False"
                                            Style="{StaticResource MaterialDesignCardFlipper}">
                                            <materialDesign:Flipper.FrontContent>
                                                <Button
                                                    Width="184"
                                                    Margin="8"
                                                    Background="#00695c"
                                                    BorderBrush="Transparent"
                                                    Command="{x:Static materialDesign:Flipper.FlipCommand}"
                                                    Content="Aceptar Pedido"
                                                    Foreground="White" />
                                            </materialDesign:Flipper.FrontContent>
                                            <materialDesign:Flipper.BackContent>
                                                <Grid Width="154">
                                                    <Button
                                                        x:Name="BtnFinalizado"
                                                        materialDesign:ButtonProgressAssist.IsIndeterminate="True"
                                                        materialDesign:ButtonProgressAssist.IsIndicatorVisible="True"
                                                        materialDesign:ButtonProgressAssist.Value="-1"
                                                        Background="#00695c"
                                                        BorderBrush="Transparent"
                                                        Click="BtnFinalizado_click"
                                                        Content="Finalizar Pedido"
                                                        Foreground="White"
                                                        IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}"
                                                        Style="{StaticResource MaterialDesignRaisedButton}" />
                                                </Grid>
                                            </materialDesign:Flipper.BackContent>
                                        </materialDesign:Flipper>
                                        <!--#region Card Mesa con pedido-->
                                        <materialDesign:Flipper
                                            x:Name="CardPedido"
                                            Grid.Row="1"
                                            Width="250"
                                            Height="260"
                                            Margin="0,-40,0,150"
                                            FlowDirection="LeftToRight"
                                            IsFlipped="false">
                                            <materialDesign:Flipper.FrontContent>
                                                <Grid>
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="150" />
                                                        <RowDefinition Height="120" />
                                                    </Grid.RowDefinitions>
                                                    <Image
                                                        Grid.Row="0"
                                                        Width="230"
                                                        Height="150"
                                                        Margin="20,20,20,0"
                                                        HorizontalAlignment="Right"
                                                        Source="/Views/Stock/Batido-pie.jpg"
                                                        Stretch="Fill"
                                                        StretchDirection="DownOnly" />
                                                    <StackPanel
                                                        Grid.Row="1"
                                                        HorizontalAlignment="Center"
                                                        VerticalAlignment="Center">
                                                        <Grid>
                                                            <Grid.RowDefinitions>
                                                                <RowDefinition Height="29" />
                                                                <RowDefinition Height="28" />
                                                                <RowDefinition />
                                                            </Grid.RowDefinitions>

                                                            <TextBlock
                                                                Grid.Row="0"
                                                                Margin="0,0,0,0"
                                                                FontSize="15"
                                                                FontWeight="Bold"
                                                                Text="Mesa:" />
                                                            <TextBlock
                                                                Grid.Row="0"
                                                                Margin="45,0,0,0"
                                                                FontSize="15"
                                                                Text="{Binding origin}" />
                                                            <TextBlock
                                                                Grid.Row="1"
                                                                Margin="40,0,0,0"
                                                                FontSize="14"
                                                                Text="12min" />
                                                            <Button
                                                                Grid.Row="2"
                                                                Background="#00695c"
                                                                BorderBrush="Transparent"
                                                                Command="{x:Static materialDesign:Flipper.FlipCommand}"
                                                                Content="Detalles del Pedido" />
                                                        </Grid>
                                                    </StackPanel>
                                                </Grid>
                                            </materialDesign:Flipper.FrontContent>
                                            <materialDesign:Flipper.BackContent>
                                                <Grid>
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="40" />
                                                        <RowDefinition Height="*" />
                                                    </Grid.RowDefinitions>
                                                    <materialDesign:ColorZone
                                                        Grid.Row="0"
                                                        Padding="6"
                                                        VerticalAlignment="Top"
                                                        Background="#00695c"
                                                        FontWeight="Bold"
                                                        Foreground="White">
                                                        <StackPanel Orientation="Horizontal">
                                                            <Button
                                                                HorizontalAlignment="Left"
                                                                Command="{x:Static materialDesign:Flipper.FlipCommand}"
                                                                Style="{StaticResource MaterialDesignToolForegroundButton}">
                                                                <materialDesign:PackIcon HorizontalAlignment="Right" Kind="ArrowLeft" />
                                                            </Button>
                                                            <TextBlock
                                                                Margin="8,0,0,0"
                                                                VerticalAlignment="Center"
                                                                Text="Volver" />
                                                        </StackPanel>
                                                    </materialDesign:ColorZone>
                                                    <ScrollViewer
                                                        Grid.Row="1"
                                                        HorizontalScrollBarVisibility="Auto"
                                                        VerticalScrollBarVisibility="Auto">
                                                        <ItemsControl Grid.Row="1" ItemsSource="{Binding products}">
                                                            <ItemsControl.ItemsPanel>
                                                                <ItemsPanelTemplate>
                                                                    <UniformGrid Columns="1" />
                                                                </ItemsPanelTemplate>
                                                            </ItemsControl.ItemsPanel>
                                                            <ItemsControl.ItemTemplate>
                                                                <DataTemplate>
                                                                    <TreeView>
                                                                        <TreeViewItem
                                                                            FontSize="13"
                                                                            FontWeight="Bold"
                                                                            Header="{Binding name}"
                                                                            IsExpanded="True">
                                                                            <TextBlock FontSize="12" Text="{Binding toppings[0].name}" />
                                                                            <TextBlock FontSize="12" Text="{Binding toppings[1].name}" />
                                                                        </TreeViewItem>
                                                                    </TreeView>
                                                                </DataTemplate>
                                                            </ItemsControl.ItemTemplate>
                                                        </ItemsControl>
                                                    </ScrollViewer>
                                                </Grid>
                                            </materialDesign:Flipper.BackContent>
                                        </materialDesign:Flipper>
                                    </Grid>
                                </materialDesign:Card>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>

                    </ItemsControl>
                </ScrollViewer>
            </TabItem>
            <TabItem Header="Finalizados">
                <ItemsControl>
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>

                </ItemsControl>
            </TabItem>
        </TabControl>
        <!--#endregion TabItem-->
    </Grid>
</UserControl>