<Window
    x:Class="Front.Session"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Front"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Session"
    Width="350"
    Height="400"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <TextBox
            x:Name="TxtUsuario"
            Grid.Row="1"
            Width="250"
            Height="50"
            materialDesign:HintAssist.Foreground="#00695c"
            materialDesign:HintAssist.Hint="Nombre de Usuario"
            AcceptsReturn="True"
            BorderBrush="#00695c"
            BorderThickness="2"
            Style="{StaticResource MaterialDesignOutlinedTextBox}" />
        <TextBox
            x:Name="TxtContrasena"
            Grid.Row="2"
            Width="250"
            Height="50"
            materialDesign:HintAssist.Foreground="#00695c"
            materialDesign:HintAssist.Hint="Contraseña"
            AcceptsReturn="True"
            BorderBrush="#00695c"
            BorderThickness="2"
            Cursor="Arrow"
            InputScope="Password"
            Style="{StaticResource MaterialDesignOutlinedTextBox}" />
        <StackPanel Grid.Row="3" Margin="0,30,0,30">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Button
                    x:Name="BtnAceptar"
                    Grid.Column="0"
                    Width="100"
                    Background="#00695c"
                    BorderBrush="Transparent"
                    Click="BtnAceptar_Click"
                    Content="Aceptar"
                    IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}"
                    ToolTip="Resource name: MaterialDesignRaisedLightDarkButton" />
                <Button
                    x:Name="BtnCerrarForm"
                    Grid.Column="1"
                    Width="100"
                    Background="#00695c"
                    BorderBrush="Transparent"
                    Click="BtnCerrarForm_Click"
                    Content="Cerrar"
                    IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Window}}}"
                    ToolTip="Resource name: MaterialDesignRaisedLightDarkButton" />
            </Grid>
        </StackPanel>
    </Grid>
</Window>
