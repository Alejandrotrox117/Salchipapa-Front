<UserControl
    x:Class="Front.Views.Caja.PlantillaDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Front.Views.Caja"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Width="789"
    Height="560"
    mc:Ignorable="d">
    <Grid Background="White">
        <!--<materialDesign:DialogHost
            x:Name="DialogHostProductos"
            Grid.RowSpan="5"
            Grid.ColumnSpan="5"
            Background="#00695c"
            DialogTheme="Inherit"
            IsOpen="True">
            --><!--#region Contenido del formulario--><!--
            <materialDesign:DialogHost.DialogContent>
                <StackPanel Width="500" Height="500">
                    --><!--#region TITULO DEL DIALOG--><!--
                    <Grid>
                        --><!--#region FILAS DEL STACKPANEL DEL DIALOG--><!--
                        <Grid.RowDefinitions>
                            <RowDefinition Height="60" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        --><!--#endregion-->
                        <!--#region Titulo y texbox NOMBRE--><!--
                        <TextBlock
                            x:Name="TituloFormProdu"
                            Grid.Row="0"
                            Margin="0,20,0,0"
                            HorizontalAlignment="Center"
                            FontSize="20"
                            FontWeight="Bold"
                            Foreground="#00695c"
                            Text="TITULO PRODUCTO" />
                        <StackPanel Grid.Row="1">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*" />
                                    <RowDefinition />
                                    <RowDefinition />
                                    <RowDefinition />
                                    <RowDefinition />
                                    <RowDefinition />
                                    <RowDefinition />
                                </Grid.RowDefinitions>
                                <TextBox
                                    x:Name="TxtNombreProducto"
                                    Grid.Row="0"
                                    Grid.Column="0"
                                    Width="190"
                                    Height="50"
                                    Margin="0,0,0,0"
                                    materialDesign:HintAssist.Foreground="#00695c"
                                    materialDesign:HintAssist.Hint="Nombre Producto"
                                    AcceptsReturn="True"
                                    BorderBrush="#00695c"
                                    BorderThickness="2"
                                    Style="{StaticResource MaterialDesignOutlinedTextBox}" />
                                <TextBlock
                                    x:Name="ValNombreProducto"
                                    Grid.Row="1"
                                    Grid.Column="0"
                                    Margin="30,0,0,0"
                                    Visibility="Hidden" />
                                <ComboBox
                                    x:Name="CbCategoriaProducto"
                                    Grid.Row="0"
                                    Grid.Column="1"
                                    Width="190"
                                    Height="50"
                                    Margin="0,0,0,0"
                                    materialDesign:HintAssist.Foreground="#00695c"
                                    materialDesign:HintAssist.Hint="Nombre categoria"
                                    BorderBrush="#00695c"
                                    BorderThickness="2"
                                    DisplayMemberPath="name"
                                    SelectionChanged="CbCategoriaProducto_SelectionChanged"
                                    Style="{StaticResource MaterialDesignOutlinedComboBox}" />
                                <TextBlock
                                    x:Name="ValNombreCategoria"
                                    Grid.Row="1"
                                    Grid.Column="1"
                                    Margin="30,0,0,0"
                                    Visibility="Hidden" />
                                <TextBox
                                    x:Name="TxtStockProducto"
                                    Grid.Row="2"
                                    Grid.Column="0"
                                    Width="190"
                                    Height="50"
                                    Margin="0,10,0,0"
                                    materialDesign:HintAssist.Foreground="#00695c"
                                    materialDesign:HintAssist.Hint="En stock"
                                    AcceptsReturn="True"
                                    BorderBrush="#00695c"
                                    BorderThickness="2"
                                    Style="{StaticResource MaterialDesignOutlinedTextBox}" />
                                <TextBlock
                                    x:Name="ValStockProducto"
                                    Grid.Row="3"
                                    Grid.Column="0"
                                    Margin="30,0,0,0"
                                    Visibility="Hidden" />
                                <TextBox
                                    x:Name="TxtPrecioProducto"
                                    Grid.Row="2"
                                    Grid.Column="1"
                                    Width="190"
                                    Height="50"
                                    Margin="0,10,0,0"
                                    materialDesign:HintAssist.Foreground="#00695c"
                                    materialDesign:HintAssist.Hint="Precio"
                                    AcceptsReturn="True"
                                    BorderBrush="#00695c"
                                    BorderThickness="2"
                                    Style="{StaticResource MaterialDesignOutlinedTextBox}" />
                                <TextBlock
                                    x:Name="ValPrecioProducto"
                                    Grid.Row="3"
                                    Grid.Column="1"
                                    Margin="30,0,0,0"
                                    Visibility="Hidden" />
                            </Grid>
                        </StackPanel>
                        <TextBox
                            x:Name="TxtDescripcionProducto"
                            Grid.Row="3"
                            Width="300"
                            Height="90"
                            Margin="0,10,0,0"
                            VerticalAlignment="Top"
                            materialDesign:HintAssist.Foreground="#00695c"
                            materialDesign:HintAssist.Hint="Descripción"
                            BorderBrush="#00695c"
                            BorderThickness="2"
                            Style="{StaticResource MaterialDesignOutlinedTextBox}"
                            TextWrapping="Wrap"
                            VerticalScrollBarVisibility="Auto" />
                        <TextBlock
                            x:Name="ValDescripProducto"
                            Grid.Row="4"
                            Grid.Column="0"
                            Margin="100,0,0,0"
                            Visibility="Hidden" />
                        <ComboBox
                            x:Name="CBToppings"
                            Grid.Row="4"
                            Width="190"
                            Height="50"
                            Margin="25,35,0,0"
                            HorizontalAlignment="Left"
                            materialDesign:HintAssist.Foreground="#00695c"
                            materialDesign:HintAssist.Hint="Añadir Extras"
                            BorderBrush="#00695c"
                            BorderThickness="2"
                            DisplayMemberPath="name"
                            Foreground="#FF00695C"
                            KeyDown="CBToppings_KeyDown"
                            Style="{StaticResource MaterialDesignOutlinedComboBox}" />
                        <TextBlock
                            x:Name="ValToppingProducto"
                            Grid.Row="5"
                            Grid.Column="0"
                            Margin="30,0,0,0"
                            Visibility="Hidden" />
                        <StackPanel
                            Grid.Row="4"
                            Grid.Column="0"
                            Width="350"
                            Margin="250,40,0,0">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="150" />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>
                                <ScrollViewer>
                                    <ListBox
                                        x:Name="ListToppings"
                                        Grid.Column="1"
                                        MouseDoubleClick="ListToppings_MouseDoubleClick"
                                        ScrollViewer.HorizontalScrollBarVisibility="Auto"
                                        ScrollViewer.VerticalScrollBarVisibility="Disabled"
                                        Style="{StaticResource MaterialDesignFilterChipListBox}">
                                        <ListBox.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <WrapPanel />
                                            </ItemsPanelTemplate>
                                        </ListBox.ItemsPanel>
                                        <ListBox.ItemTemplate>
                                            <DataTemplate>
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="50" />
                                                        <ColumnDefinition />
                                                    </Grid.ColumnDefinitions>
                                                    <TextBlock Grid.Column="0" Text="{Binding name}" />
                                                    <Button
                                                        Name="BtnEliminarTopping"
                                                        Grid.Column="1"
                                                        Width="17"
                                                        Height="17"
                                                        Background="Transparent"
                                                        BorderBrush="Transparent"
                                                        Style="{StaticResource MaterialDesignFloatingActionMiniSecondaryDarkButton}">
                                                        <materialDesign:PackIcon
                                                            Width="16"
                                                            Height="16"
                                                            Foreground="Black"
                                                            Kind="CloseCircle" />
                                                    </Button>
                                                </Grid>
                                            </DataTemplate>
                                        </ListBox.ItemTemplate>

                                    </ListBox>
                                </ScrollViewer>
                            </Grid>
                        </StackPanel>
                        <StackPanel
                            Grid.Row="5"
                            Margin="0,35,0,0"
                            HorizontalAlignment="Center"
                            Orientation="Horizontal">
                            <Button
                                x:Name="BtnEnviarProducto"
                                Margin="0,8,108,0"
                                Background="Transparent"
                                BorderBrush="#00695c"
                                Click="BtnEnviarProducto_Click"
                                Command="{x:Static materialDesign:DialogHost.CloseDialogCommand}"
                                Content="Agregar"
                                Foreground="#00695c"
                                IsDefault="False">
                                <Button.CommandParameter>
                                    <system:Boolean xmlns:system="clr-namespace:System;assembly=mscorlib">True</system:Boolean>
                                </Button.CommandParameter>
                            </Button>
                            <Button
                                Margin="0,8,8,0"
                                Background="Transparent"
                                BorderBrush="#00695c"
                                Command="{x:Static materialDesign:DialogHost.CloseDialogCommand}"
                                Content="Cancelar"
                                Foreground="#00695c"
                                IsCancel="True">
                                <Button.CommandParameter>
                                    <system:Boolean xmlns:system="clr-namespace:System;assembly=mscorlib">False</system:Boolean>
                                </Button.CommandParameter>
                            </Button>
                        </StackPanel>
                    </Grid>
                    --><!--#endregion--><!--
                </StackPanel>

            </materialDesign:DialogHost.DialogContent>
        </materialDesign:DialogHost>-->
    </Grid>
</UserControl>
