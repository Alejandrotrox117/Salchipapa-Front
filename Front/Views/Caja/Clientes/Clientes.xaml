<UserControl
    x:Class="Front.Views.Caja.Clientes.Clientes"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:FormClientes="clr-namespace:Front.Views.Caja.Clientes"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Front.Views.Caja.Clientes"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Width="789"
    Height="510"
    mc:Ignorable="d">
    <Grid Background="White">
        <Grid>
            <materialDesign:DrawerHost
                x:Name="DrawerHostClientes"
                Grid.RowSpan="5"
                Grid.ColumnSpan="5"
                Width="800"
                Height="510"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Panel.ZIndex="3"
                BorderThickness="1"
                BottomDrawerBackground="#00695c"
                BottomDrawerCornerRadius="20 20 0 0"
                IsBottomDrawerOpen="False">
                <materialDesign:DrawerHost.BottomDrawerContent>
                    <StackPanel
                        Width="490"
                        Height="50"
                        Margin="0,0,0,0"
                        HorizontalAlignment="Center"
                        Orientation="Horizontal">
                        <TextBlock
                            x:Name="TxtTituloDrawerCliente"
                            Margin="4"
                            VerticalAlignment="Center"
                            FontSize="13"
                            FontWeight="Bold"
                            Foreground="White" />
                        <Button
                            Name="BtnConfirmarClienteDrawner"
                            Margin="4"
                            VerticalAlignment="Center"
                            Panel.ZIndex="3"
                            Background="Transparent"
                            BorderBrush="Transparent"
                            Content="Confirmar"
                            Foreground="White"
                            Style="{StaticResource MaterialDesignFlatButton}" />
                        <Button
                            Name="BtnCancelarClienteDrawner"
                            Margin="4"
                            VerticalAlignment="Center"
                            BorderBrush="Transparent"
                            CommandParameter="{x:Static Dock.Bottom}"
                            Content="Cancelar"
                            Foreground="White"
                            Style="{StaticResource MaterialDesignFlatButton}" />
                    </StackPanel>
                </materialDesign:DrawerHost.BottomDrawerContent>
            </materialDesign:DrawerHost>
            <!--#region Formulario Clientes-->
            <materialDesign:DialogHost
                x:Name="DialogHostClientes"
                Background="#00695c"
                DialogTheme="Inherit"
                IsOpen="False"
                OverlayBackground="Black">
                <materialDesign:DialogHost.DialogContent>
                    <Grid>

                        <FormClientes:DialogClientes />
                        <StackPanel
                            Grid.Row="6"
                            Margin="0,0,0,-270"
                            HorizontalAlignment="Center"
                            Orientation="Horizontal">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>
                                <Button
                                    x:Name="BtnAceptarDialog"
                                    Grid.Column="0"
                                    Margin="0,0,90,0"
                                    Background="Transparent"
                                    BorderBrush="#00695c"
                                    Content="Aceptar"
                                    Foreground="#00695c"
                                    IsDefault="False">
                                    <Button.CommandParameter>
                                        <system:Boolean xmlns:system="clr-namespace:System;assembly=mscorlib">
                                            True
                                        </system:Boolean>
                                    </Button.CommandParameter>
                                </Button>
                                <Button
                                    x:Name="BtnCerrarForm"
                                    Grid.Column="1"
                                    Margin="0,0,0,0"
                                    Background="Transparent"
                                    BorderBrush="#00695c"
                                    Content="Cancelar"
                                    Foreground="#00695c"
                                    IsCancel="True">
                                    <Button.CommandParameter>
                                        <system:Boolean xmlns:system="clr-namespace:System;assembly=mscorlib">
                                            False
                                        </system:Boolean>
                                    </Button.CommandParameter>
                                </Button>
                            </Grid>
                        </StackPanel>
                    </Grid>
                </materialDesign:DialogHost.DialogContent>
                <Grid>
                    <materialDesign:ColorZone
                        Grid.Row="0"
                        Grid.Column="0"
                        Grid.ColumnSpan="5"
                        Height="50"
                        Background="#00695c"
                        Effect="{DynamicResource MaterialDesignShadowDepth5}"
                        Mode="Custom">
                        <TextBlock
                            Margin="16"
                            FontSize="15"
                            FontStyle="Italic"
                            FontWeight="Bold"
                            Foreground="White"
                            Text="Todos los Clientes" />
                    </materialDesign:ColorZone>
                    <Button
                        x:Name="BtnAgregarCliente"
                        Width="70"
                        Height="70"
                        Margin="664,0,55,10"
                        VerticalAlignment="Bottom"
                        Panel.ZIndex="1"
                        Background="#00695c"
                        BorderBrush="Transparent"
                        Click="BtnAgregarCliente_Click"
                        Cursor="Hand"
                        Style="{StaticResource MaterialDesignFloatingActionMiniAccentButton}">
                        <materialDesign:PackIcon
                            Width="50"
                            Height="50"
                            Foreground="White"
                            Kind="AccountGroupOutline" />
                    </Button>
                    <DataGrid
                        x:Name="DataGridClientes"
                        Width="789"
                        Height="457"
                        Margin="0,50,0,0"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Top"
                        AutoGenerateColumns="False"
                        Background="White"
                        CanUserAddRows="False"
                        CanUserDeleteRows="False"
                        CanUserReorderColumns="False"
                        CanUserResizeRows="False"
                        CanUserSortColumns="False"
                        FontSize="15"
                        Foreground="#00695c"
                        HeadersVisibility="All"
                        HorizontalGridLinesBrush="#00695c"
                        HorizontalScrollBarVisibility="Auto"
                        IsReadOnly="True"
                        ItemsSource="{Binding listClientes}"
                        RowBackground="White">
                        <DataGrid.Columns>
                            <DataGridTextColumn
                                Width="*"
                                Binding="{Binding ci}"
                                Header="Cedula" />
                            <DataGridTextColumn
                                Width="*"
                                Binding="{Binding name}"
                                Header="Nombre" />
                            <DataGridTextColumn
                                Width="*"
                                Binding="{Binding surname}"
                                Header="Apellido" />
                            <DataGridTextColumn
                                Width="130"
                                Binding="{Binding phone}"
                                Header="Teléfono" />
                            <DataGridTextColumn
                                Width="*"
                                Binding="{Binding address}"
                                CanUserReorder="False"
                                Header="Dirección" />
                            <DataGridTextColumn Binding="{Binding _id}" Visibility="Hidden" />
                            <DataGridTemplateColumn Width="130" Header="Opciones">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <DockPanel>
                                            <Button
                                                x:Name="BtnEliminarCliente"
                                                Width="50"
                                                Background="#f44c58"
                                                BorderBrush="Transparent">
                                                <materialDesign:PackIcon Foreground="White" Kind="Delete" />
                                            </Button>
                                            <Button
                                                x:Name="BtnActualizarCliente"
                                                Width="50"
                                                Background="#00695c"
                                                BorderBrush="Transparent">
                                                <materialDesign:PackIcon Foreground="White" Kind="Pencil" />
                                            </Button>
                                        </DockPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </materialDesign:DialogHost>
        </Grid>
    </Grid>
</UserControl>
