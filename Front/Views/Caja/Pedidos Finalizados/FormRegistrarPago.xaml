<UserControl
    x:Class="Front.Views.Caja.Pedidos_Finalizados.FormRegistrarPago"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Front.Views.Caja.Pedidos_Finalizados"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="460"
    mc:Ignorable="d">
    <Grid Background="White">
        <StackPanel Width="455" Height="450">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />

                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <!--#region Titulo formulario-->
                <TextBlock
                    x:Name="TxtTituloDialg"
                    Grid.Row="0"
                    Grid.ColumnSpan="2"
                    Margin="0,0,0,20"
                    HorizontalAlignment="Center"
                    FontSize="20"
                    FontWeight="Bold"
                    Foreground="#00695c"
                    Text="TITULO" />
                <!--#endregion-->
                <!--#region Titulo y texbox NOMBRE-->
                <TextBox
                    x:Name="TxtCiCliente"
                    Grid.Row="1"
                    Grid.Column="0"
                    Width="190"
                    Height="52"
                    Margin="0,0,0,0"
                    materialDesign:HintAssist.Foreground="Gray"
                    materialDesign:HintAssist.Hint="Cedula del cliente"
                    AcceptsReturn="True"
                    BorderBrush="#00695c"
                    BorderThickness="2"
                    Style="{StaticResource MaterialDesignOutlinedTextBox}" />
                <TextBlock
                    x:Name="TxtCliente"
                    Grid.Row="1"
                    Grid.Column="1"
                    Margin="15,0,15,0"
                    VerticalAlignment="Center"
                    FontSize="16"
                    FontStyle="Italic"
                    FontWeight="DemiBold"
                    Foreground="#00695c"
                    Text="Richard Gil"
                    TextAlignment="Justify"
                    TextWrapping="Wrap"
                    Visibility="Visible" />

                <TextBlock
                    x:Name="lblNombreError"
                    Grid.Row="2"
                    Margin="15,0,15,0"
                    VerticalAlignment="Top"
                    FontSize="10"
                    Foreground="#f44c58"
                    TextAlignment="Justify"
                    TextWrapping="Wrap"
                    Visibility="Visible" />

                <TextBlock
                    x:Name="lblReferenciaError"
                    Grid.Row="2"
                    Grid.Column="1"
                    Margin="15,0,15,0"
                    FontSize="10"
                    Foreground="#f44c58"
                    TextAlignment="Justify"
                    TextWrapping="Wrap"
                    Visibility="Visible" />
                <TextBlock
                    x:Name="lblCiclienteError"
                    Grid.Row="4"
                    Margin="15,0,15,0"
                    FontSize="10"
                    Foreground="#f44c58"
                    TextAlignment="Justify"
                    TextWrapping="Wrap"
                    Visibility="Visible" />

                <ComboBox
                    x:Name="TxtPago"
                    Grid.Row="3"
                    Grid.Column="0"
                    Width="190"
                    Height="52"
                    Margin="0,0,0,0"
                    materialDesign:HintAssist.Foreground="Gray"
                    materialDesign:HintAssist.Hint="Metodo de pago"
                    BorderBrush="#00695c"
                    BorderThickness="2"
                    Style="{StaticResource MaterialDesignOutlinedComboBox}" />

                <Button
                    x:Name="BtnAgregarToppingList"
                    Grid.Row="3"
                    Grid.ColumnSpan="2"
                    Margin="220,5,0,0"
                    HorizontalAlignment="Left"
                    Background="#00695c"
                    BorderBrush="Transparent"
                    
                    Style="{StaticResource MaterialDesignFloatingActionMiniButton}">
                    <materialDesign:PackIcon
                        Width="30"
                        Height="30"
                        Foreground="White"
                        Kind="Plus" />
                </Button>

            </Grid>
        </StackPanel>
    </Grid>
</UserControl>
