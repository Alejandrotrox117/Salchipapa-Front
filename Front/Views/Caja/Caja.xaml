<UserControl
    x:Class="Front.Views.Caja.Caja"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Front.Views.Caja"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Width="795"
    Height="558"
    mc:Ignorable="d">
    <Grid Background="White" Loaded="Grid_Loaded">
        <materialDesign:Card>
            <TabControl
                materialDesign:ColorZoneAssist.Mode="Light"
                materialDesign:NavigationRailAssist.ShowSelectionBackground="True"
                Style="{StaticResource MaterialDesignNavigationRailTabControl}"
                TabStripPlacement="Bottom">
                <!--#region TabItem Clientes-->
                <TabItem
                    x:Name="TabPagos"
                    Width="265"
                    Height="50">
                    <TabItem.Header>
                        <StackPanel Width="150" Height="auto">
                            <materialDesign:PackIcon
                                Width="24"
                                Height="24"
                                HorizontalAlignment="Center"
                                Foreground="#00695c"
                                Kind="AccountAdd" />
                            <TextBlock
                                HorizontalAlignment="Center"
                                FontStyle="Italic"
                                FontWeight="Bold"
                                Foreground="#00695c"
                                Text="Clientes" />
                        </StackPanel>
                    </TabItem.Header>
                    <!--#region Contenido Empleados-->
                    <TabItem.Content>
                        <Grid>
                            <materialDesign:DrawerHost
                                x:Name="DrawerHostClientes"
                                Grid.RowSpan="6"
                                Grid.ColumnSpan="6"
                                Width="800"
                                Height="560"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Panel.ZIndex="3"
                                BorderThickness="1"
                                BottomDrawerBackground="#00695c"
                                BottomDrawerCornerRadius="20 20 0 0"
                                IsBottomDrawerOpen="False">
                                <materialDesign:DrawerHost.BottomDrawerContent>
                                    <StackPanel
                                        Width="490"
                                        Height="50"
                                        Margin="0,0,0,30"
                                        HorizontalAlignment="Center"
                                        Orientation="Horizontal">
                                        <TextBlock
                                            x:Name="TxtTituloDrawerHost"
                                            Margin="4"
                                            VerticalAlignment="Center"
                                            FontSize="13"
                                            FontWeight="Bold"
                                            Foreground="White" />
                                        <Button
                                            x:Name="BtnEnviarCliente"
                                            Margin="4"
                                            VerticalAlignment="Center"
                                            Background="Transparent"
                                            BorderBrush="Transparent"
                                            Click="BtnEnviarCliente_Click"
                                            Command="{x:Static materialDesign:DrawerHost.CloseDrawerCommand}"
                                            Content="Agregar"
                                            Foreground="White"
                                            Style="{StaticResource MaterialDesignFlatButton}"
                                            Visibility="Hidden" />
                                        <Button
                                            Name="BtnEnviarClienteActualizado"
                                            Margin="-90,0,0,0"
                                            VerticalAlignment="Center"
                                            Panel.ZIndex="3"
                                            Background="Transparent"
                                            BorderBrush="Transparent"
                                            Click="BtnEnviarClienteActualizado_Click"
                                            Command="{x:Static materialDesign:DrawerHost.CloseDrawerCommand}"
                                            Content="Actualizar"
                                            Foreground="White"
                                            Style="{StaticResource MaterialDesignFlatButton}"
                                            Visibility="Hidden" />
                                        <Button
                                            Name="BtnEliminarCliente"
                                            Margin="-90,0,0,0"
                                            VerticalAlignment="Center"
                                            Panel.ZIndex="3"
                                            Background="Transparent"
                                            BorderBrush="Transparent"
                                            Click="BtnEliminarCliente_Click"
                                            Command="{x:Static materialDesign:DrawerHost.CloseDrawerCommand}"
                                            Content="Eliminar"
                                            Foreground="White"
                                            Style="{StaticResource MaterialDesignFlatButton}"
                                            Visibility="Hidden" />
                                        <Button
                                            Margin="4"
                                            VerticalAlignment="Center"
                                            BorderBrush="Transparent"
                                            Command="{x:Static materialDesign:DrawerHost.CloseDrawerCommand}"
                                            CommandParameter="{x:Static Dock.Bottom}"
                                            Content="Cancelar"
                                            Foreground="White"
                                            Style="{StaticResource MaterialDesignFlatButton}" />
                                    </StackPanel>
                                </materialDesign:DrawerHost.BottomDrawerContent>
                            </materialDesign:DrawerHost>
                            <!--#region Formulario Empleados-->
                            <materialDesign:DialogHost
                                x:Name="DialogHostClientes"
                                Background="#00695c"
                                DialogClosing="DialogHostClientes_DialogClosing"
                                DialogTheme="Inherit"
                                IsOpen="False"
                                OverlayBackground="Black">
                                <materialDesign:DialogHost.DialogContent>
                                    <StackPanel
                                        Width="430"
                                        Height="330"
                                        Margin="15">
                                        <!--#region TITULO DEL DIALOG-->
                                        <TextBlock
                                            x:Name="TxtTituloDialg"
                                            Margin="0,0,0,10"
                                            HorizontalAlignment="Center"
                                            FontSize="20"
                                            FontWeight="Bold"
                                            Foreground="#00695c" />
                                        <!--#endregion-->
                                        <Grid>
                                            <!--#region FILAS Y COLUMNAMS DEL STACKPANEL DEL DIALOG-->
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition />
                                                <ColumnDefinition />
                                            </Grid.ColumnDefinitions>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="*" />
                                                <RowDefinition Height="60" />
                                                <RowDefinition Height="60" />
                                            </Grid.RowDefinitions>
                                            <!--#endregion-->
                                            <!--#region Titulo y texbox NOMBRE-->
                                            <TextBox
                                                x:Name="TxtNombre"
                                                Grid.Row="1"
                                                Width="190"
                                                Height="52"
                                                Margin="-13,-17,0,0"
                                                materialDesign:HintAssist.Foreground="#00695c"
                                                materialDesign:HintAssist.Hint="Nombre"
                                                AcceptsReturn="True"
                                                BorderBrush="#00695c"
                                                BorderThickness="2"
                                                Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                                TextWrapping="Wrap" />
                                            <!--#endregion TITULO Y TEXBOX NOMBRE-->
                                            <!--#region TITULO APELLIDO Y TEXBLOCK APELLIDO-->
                                            <TextBox
                                                x:Name="TxtApellido"
                                                Grid.Row="1"
                                                Grid.Column="1"
                                                Width="190"
                                                Height="52"
                                                Margin="5,-17,0,0"
                                                materialDesign:HintAssist.Foreground="#00695c"
                                                materialDesign:HintAssist.Hint="Apellido"
                                                AcceptsReturn="True"
                                                BorderBrush="#00695c"
                                                BorderThickness="2"
                                                Style="{StaticResource MaterialDesignOutlinedTextBox}" />
                                            <!--#endregion-->
                                            <!--#region TITULO Y COMBOBOX CEDULA-->
                                            <ComboBox
                                                x:Name="CBCedula"
                                                Grid.Row="3"
                                                Grid.Column="0"
                                                Width="73"
                                                Height="52"
                                                Margin="0,0,0,0"
                                                HorizontalAlignment="Left"
                                                BorderBrush="#00695c"
                                                BorderThickness="2"
                                                Foreground="#FF00695C"
                                                Style="{StaticResource MaterialDesignOutlinedComboBox}">
                                                <ComboBoxItem Content="V-" />
                                                <ComboBoxItem Content="J-" />
                                                <ComboBoxItem Content="E-" />
                                            </ComboBox>
                                            <TextBox
                                                x:Name="TxtCedula"
                                                Grid.Row="3"
                                                Grid.Column="0"
                                                Width="120"
                                                Height="52"
                                                Margin="55,0,0,0"
                                                materialDesign:HintAssist.Foreground="#00695c"
                                                materialDesign:HintAssist.Hint="Cédula"
                                                BorderBrush="#00695c"
                                                BorderThickness="2"
                                                Style="{StaticResource MaterialDesignOutlinedTextBox}" />
                                            <!--#endregion-->
                                            <!--#region TITULO TELEFONO Y COMBOBOX-->
                                            <ComboBox
                                                x:Name="CBTelefono"
                                                Grid.Row="3"
                                                Grid.Column="1"
                                                Width="73"
                                                Height="52"
                                                Margin="10,0,0,0"
                                                HorizontalAlignment="Left"
                                                BorderBrush="#00695c"
                                                BorderThickness="2"
                                                Foreground="#FF00695C"
                                                Style="{StaticResource MaterialDesignOutlinedComboBox}">
                                                <ComboBoxItem Content="424-" />
                                                <ComboBoxItem Content="414-" />
                                                <ComboBoxItem Content="426-" />
                                                <ComboBoxItem Content="416-" />
                                                <ComboBoxItem Content="412-" />
                                            </ComboBox>
                                            <TextBox
                                                x:Name="TxtTelefono"
                                                Grid.Row="3"
                                                Grid.Column="1"
                                                Width="120"
                                                Height="52"
                                                Margin="72,0,0,0"
                                                materialDesign:HintAssist.Foreground="#00695c"
                                                materialDesign:HintAssist.Hint="Teléfono"
                                                AcceptsReturn="True"
                                                BorderBrush="#00695c"
                                                BorderThickness="2"
                                                Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                                TextWrapping="Wrap" />
                                            <!--#endregion-->
                                        </Grid>
                                        <!--#endregion-->
                                        <TextBox
                                            x:Name="TxtDireccion"
                                            Width="415"
                                            Height="100"
                                            Margin="0,10,0,0"
                                            VerticalAlignment="Top"
                                            materialDesign:HintAssist.Foreground="#00695c"
                                            materialDesign:HintAssist.Hint="Dirección"
                                            BorderBrush="#00695c"
                                            BorderThickness="2"
                                            Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                            TextWrapping="Wrap"
                                            VerticalScrollBarVisibility="Auto" />
                                        <StackPanel
                                            Margin="0,10,0,0"
                                            HorizontalAlignment="Center"
                                            Orientation="Horizontal">
                                            <Button
                                                x:Name="BtnAbrirDrawerClientes"
                                                Margin="0,8,0,0"
                                                Background="Transparent"
                                                BorderBrush="#00695c"
                                                Click="BtnAbrirDrawerClientes_Click"
                                                Content="Agregar"
                                                Foreground="#00695c"
                                                IsDefault="False"
                                                Visibility="Hidden" />
                                            <Button
                                                x:Name="BtnAbrirDrawerActualizarCliente"
                                                Margin="-100,8,100,0"
                                                Background="Transparent"
                                                BorderBrush="#00695c"
                                                Click="BtnAbrirDrawerActualizarCliente_Click"
                                                Content="Actualizar"
                                                Foreground="#00695c"
                                                IsDefault="False"
                                                Visibility="Hidden">
                                                <Button.CommandParameter>
                                                    <system:Boolean xmlns:system="clr-namespace:System;assembly=mscorlib">
                                                        True
                                                    </system:Boolean>
                                                </Button.CommandParameter>
                                            </Button>
                                            <Button
                                                x:Name="BtnCerrarForm"
                                                Margin="0,8,8,0"
                                                Background="Transparent"
                                                BorderBrush="#00695c"
                                                Click="BtnCerrarForm_Click"
                                                Content="Cancelar"
                                                Foreground="#00695c"
                                                IsCancel="True">
                                                <Button.CommandParameter>
                                                    <system:Boolean xmlns:system="clr-namespace:System;assembly=mscorlib">
                                                        False
                                                    </system:Boolean>
                                                </Button.CommandParameter>
                                            </Button>
                                        </StackPanel>
                                    </StackPanel>
                                </materialDesign:DialogHost.DialogContent>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="20" />
                                        <ColumnDefinition />
                                        <ColumnDefinition />
                                        <ColumnDefinition />
                                        <ColumnDefinition Width="20" />
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="45" />
                                        <RowDefinition />
                                        <RowDefinition />
                                        <RowDefinition />
                                        <RowDefinition Height="20" />
                                    </Grid.RowDefinitions>
                                    <!--#endregion Filas y columnas-->
                                    <!--#region Contenido-->
                                    <!--#region Titulo CLIENTES-->
                                    <materialDesign:ColorZone
                                        Grid.Row="0"
                                        Grid.Column="0"
                                        Grid.ColumnSpan="5"
                                        Height="50"
                                        Background="#00695c"
                                        Effect="{DynamicResource MaterialDesignShadowDepth5}"
                                        Mode="Custom">
                                        <TextBlock
                                            Margin="16"
                                            FontSize="15"
                                            FontStyle="Italic"
                                            FontWeight="Bold"
                                            Foreground="White"
                                            Text="Todos los Clientes" />
                                    </materialDesign:ColorZone>
                                    <!--#endregion-->
                                    <Button
                                        x:Name="BtnAbrirFormularioAgregar"
                                        Grid.Row="3"
                                        Grid.Column="3"
                                        Width="70"
                                        Height="70"
                                        Margin="60,0,0,0"
                                        VerticalAlignment="Bottom"
                                        Panel.ZIndex="1"
                                        Background="#00695c"
                                        BorderBrush="Transparent"
                                        Click="BtnAbrirFormularioAgregar_Click"
                                        Cursor="Hand"
                                        Style="{StaticResource MaterialDesignFloatingActionMiniAccentButton}">
                                        <materialDesign:PackIcon
                                            Width="50"
                                            Height="50"
                                            Foreground="White"
                                            Kind="ClipboardPlusOutline" />
                                    </Button>
                                    <!--#region Datagrid CLIENTES-->
                                    <DataGrid
                                        x:Name="DataGridClientes"
                                        Grid.Row="1"
                                        Grid.RowSpan="4"
                                        Grid.Column="1"
                                        Grid.ColumnSpan="3"
                                        Width="755"
                                        Height="443"
                                        Margin="0,10,0,0"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Top"
                                        AutoGenerateColumns="False"
                                        Background="White"
                                        CanUserAddRows="False"
                                        CanUserDeleteRows="False"
                                        CanUserReorderColumns="False"
                                        CanUserResizeRows="False"
                                        CanUserSortColumns="False"
                                        FontSize="15"
                                        Foreground="#00695c"
                                        HeadersVisibility="All"
                                        HorizontalGridLinesBrush="#00695c"
                                        HorizontalScrollBarVisibility="Auto"
                                        IsReadOnly="True"
                                        ItemsSource="{Binding listClientes}"
                                        RowBackground="White">
                                        <DataGrid.Columns>
                                            <DataGridTextColumn
                                                Width="*"
                                                Binding="{Binding ci}"
                                                Header="Cedula" />
                                            <DataGridTextColumn
                                                Width="*"
                                                Binding="{Binding name}"
                                                Header="Nombre" />
                                            <DataGridTextColumn
                                                Width="*"
                                                Binding="{Binding surname}"
                                                Header="Apellido" />
                                            <DataGridTextColumn
                                                Width="130"
                                                Binding="{Binding phone}"
                                                Header="Teléfono" />
                                            <DataGridTextColumn
                                                Width="*"
                                                Binding="{Binding address}"
                                                CanUserReorder="False"
                                                Header="Dirección" />
                                            <DataGridTextColumn Binding="{Binding _id}" Visibility="Hidden" />
                                            <DataGridTemplateColumn Width="130" Header="Opciones">
                                                <DataGridTemplateColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <DockPanel>
                                                            <Button
                                                                x:Name="BtnAbrirDrawerEliminar"
                                                                Width="50"
                                                                Background="#f44c58"
                                                                BorderBrush="Transparent"
                                                                Click="BtnAbrirDrawerEliminar_Click">
                                                                <materialDesign:PackIcon Foreground="White" Kind="Delete" />
                                                            </Button>
                                                            <Button
                                                                x:Name="BtnEditarCliente"
                                                                Width="50"
                                                                Background="#00695c"
                                                                BorderBrush="Transparent"
                                                                Click="BtnAbrirFormEditarCliente_Click">
                                                                <materialDesign:PackIcon Foreground="White" Kind="Pencil" />
                                                            </Button>
                                                        </DockPanel>
                                                    </DataTemplate>
                                                </DataGridTemplateColumn.CellTemplate>
                                            </DataGridTemplateColumn>
                                        </DataGrid.Columns>
                                    </DataGrid>
                                    <!--#endregion-->
                                </Grid>
                            </materialDesign:DialogHost>
                            <!--#endregion-->
                        </Grid>
                    </TabItem.Content>
                    <!--#endregion-->
                </TabItem>
                <!--#endregion-->
                <!--#region TAB METODOS DE PAGO-->
                <TabItem Width="265" Height="50">
                    <TabItem.Header>
                        <StackPanel Width="150" Height="auto">
                            <materialDesign:PackIcon
                                Width="24"
                                Height="24"
                                HorizontalAlignment="Center"
                                Foreground="#00695c"
                                Kind="TabSearch" />
                            <TextBlock
                                HorizontalAlignment="Center"
                                FontStyle="Italic"
                                FontWeight="Bold"
                                Foreground="#00695c"
                                Text="Métodos de pago" />
                        </StackPanel>
                    </TabItem.Header>
                    <TabItem.Content>
                        <Grid>
                            <materialDesign:DrawerHost
                                x:Name="DrawerHostPagos"
                                Grid.RowSpan="6"
                                Grid.ColumnSpan="6"
                                Width="800"
                                Height="560"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Panel.ZIndex="8"
                                BorderThickness="1"
                                BottomDrawerBackground="#00695c"
                                BottomDrawerCornerRadius="20 20 0 0"
                                IsBottomDrawerOpen="False">
                                <materialDesign:DrawerHost.BottomDrawerContent>
                                    <StackPanel
                                        Width="490"
                                        Height="50"
                                        Margin="0,0,0,30"
                                        HorizontalAlignment="Center"
                                        Orientation="Horizontal">
                                        <TextBlock
                                            x:Name="TxtTituloDrawerHostPagos"
                                            Margin="4"
                                            VerticalAlignment="Center"
                                            FontSize="13"
                                            FontWeight="Bold"
                                            Foreground="White" />
                                        <Button
                                            x:Name="BtnAgregarPago"
                                            Margin="4"
                                            VerticalAlignment="Center"
                                            Background="Transparent"
                                            BorderBrush="Transparent"
                                            Click="BtnEnviarPago_Click"
                                            Command="{x:Static materialDesign:DrawerHost.CloseDrawerCommand}"
                                            Content="Agregar"
                                            Foreground="White"
                                            Style="{StaticResource MaterialDesignFlatButton}"
                                            Visibility="Hidden" />
                                        <Button
                                            x:Name="BtnActualizarPago"
                                            Margin="-90,0,0,0"
                                            VerticalAlignment="Center"
                                            Panel.ZIndex="3"
                                            Background="Transparent"
                                            BorderBrush="Transparent"
                                            Click="BtnEnviarActualizarPago_Click"
                                            Command="{x:Static materialDesign:DrawerHost.CloseDrawerCommand}"
                                            Content="Actualizar"
                                            Foreground="White"
                                            Style="{StaticResource MaterialDesignFlatButton}"
                                            Visibility="Hidden" />
                                        <Button
                                            x:Name="BtnEliminarPago"
                                            Margin="-90,0,0,0"
                                            VerticalAlignment="Center"
                                            Panel.ZIndex="3"
                                            Background="Transparent"
                                            BorderBrush="Transparent"
                                            Click="BtnEliminarPago_Click_1"
                                            Command="{x:Static materialDesign:DrawerHost.CloseDrawerCommand}"
                                            Content="Eliminar"
                                            Foreground="White"
                                            Style="{StaticResource MaterialDesignFlatButton}"
                                            Visibility="Hidden" />
                                        <Button
                                            Margin="4"
                                            VerticalAlignment="Center"
                                            BorderBrush="Transparent"
                                            Command="{x:Static materialDesign:DrawerHost.CloseDrawerCommand}"
                                            CommandParameter="{x:Static Dock.Bottom}"
                                            Content="Cancelar"
                                            Foreground="White"
                                            Style="{StaticResource MaterialDesignFlatButton}" />
                                    </StackPanel>
                                </materialDesign:DrawerHost.BottomDrawerContent>
                            </materialDesign:DrawerHost>
                            <materialDesign:DialogHost
                                x:Name="DialogHostMetodosPago"
                                Grid.RowSpan="5"
                                Grid.ColumnSpan="5"
                                Background="#00695c"
                                DialogTheme="Inherit"
                                IsOpen="false">
                                <materialDesign:DialogHost.DialogContent>
                                    <StackPanel Width="400" Height="200">
                                        <!--#region TITULO DEL DIALOG-->
                                        <TextBlock
                                            x:Name="TituloDialogPagos"
                                            Margin="0,0,0,0"
                                            HorizontalAlignment="Center"
                                            FontSize="20"
                                            FontWeight="Bold"
                                            Foreground="#00695c" />
                                        <!--#endregion-->
                                        <Grid>
                                            <!--#region FILAS Y COLUMNAMS DEL STACKPANEL DEL DIALOG-->
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="50" />
                                                <RowDefinition Height="50" />
                                                <RowDefinition Height="50" />
                                            </Grid.RowDefinitions>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition />
                                                <ColumnDefinition />

                                            </Grid.ColumnDefinitions>
                                            <!--#endregion-->
                                            <!--#region Titulo y texbox NOMBRE-->
                                            <TextBox
                                                x:Name="TxtNombrePago"
                                                Grid.Row="1"
                                                Grid.Column="0"
                                                Width="190"
                                                Height="55"
                                                Margin="0,-13,0,0"
                                                materialDesign:HintAssist.Foreground="#00695c"
                                                materialDesign:HintAssist.Hint="Nombre Metodo de pago"
                                                AcceptsReturn="True"
                                                BorderBrush="#00695c"
                                                BorderThickness="2"
                                                Style="{StaticResource MaterialDesignOutlinedTextBox}" />
                                            <TextBox
                                                x:Name="TxtMoneda"
                                                Grid.Row="1"
                                                Grid.Column="1"
                                                Width="190"
                                                Height="55"
                                                Margin="0,-13,10,0"
                                                materialDesign:HintAssist.Foreground="#00695c"
                                                materialDesign:HintAssist.Hint="Moneda"
                                                AcceptsReturn="True"
                                                BorderBrush="#00695c"
                                                BorderThickness="2"
                                                Style="{StaticResource MaterialDesignOutlinedTextBox}" />
                                        </Grid>
                                        <StackPanel
                                            Grid.Row="0"
                                            Width="300"
                                            Margin="0,-30,0,0"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Top"
                                            Orientation="Horizontal">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition />
                                                    <ColumnDefinition />
                                                </Grid.ColumnDefinitions>
                                                <Button
                                                    x:Name="BtnAbrirDrawerAgregarPago"
                                                    Margin="0,8,0,0"
                                                    Background="Transparent"
                                                    BorderBrush="#00695c"
                                                    Click="BtnAbrirDrawerAgregarPago_Click"
                                                    Content="Agregar"
                                                    Foreground="#00695c"
                                                    Visibility="Hidden" />
                                                <Button
                                                    x:Name="BtnAbrirDrawerActualizarPago"
                                                    Grid.Column="0"
                                                    Margin="0,8,0,0"
                                                    Background="Transparent"
                                                    BorderBrush="#00695c"
                                                    Click="BtnEnviarActualizarPago_Click"
                                                    Content="Actualizar"
                                                    Foreground="#00695c"
                                                    Visibility="Hidden" />
                                                <Button
                                                    x:Name="BtnAbrirDrawerEliminarPago"
                                                    Grid.Column="0"
                                                    Margin="0,8,0,0"
                                                    Background="Transparent"
                                                    BorderBrush="#00695c"
                                                    Content="Eliminar"
                                                    Foreground="#00695c"
                                                    Visibility="Hidden" />
                                                <Button
                                                    Grid.Column="1"
                                                    Margin="100,0,0,0"
                                                    Background="Transparent"
                                                    BorderBrush="#00695c"
                                                    Command="{x:Static materialDesign:DialogHost.CloseDialogCommand}"
                                                    Content="Cancelar"
                                                    Foreground="#00695c">
                                                    <Button.CommandParameter>
                                                        <system:Boolean xmlns:system="clr-namespace:System;assembly=mscorlib">False</system:Boolean>
                                                    </Button.CommandParameter>
                                                </Button>
                                            </Grid>
                                        </StackPanel>
                                        <!--#endregion-->
                                    </StackPanel>
                                </materialDesign:DialogHost.DialogContent>
                                <!--#region Colorzone Metodos de pago-->
                                <Grid>
                                    <materialDesign:ColorZone
                                        Grid.Row="0"
                                        Height="50"
                                        Background="#00695c"
                                        Mode="Custom">
                                        <TextBlock
                                            Margin="16"
                                            FontSize="15"
                                            FontStyle="Italic"
                                            FontWeight="Bold"
                                            Foreground="White"
                                            Text="Todos los métodos de pago" />
                                    </materialDesign:ColorZone>
                                    <materialDesign:PopupBox
                                        Grid.Row="0"
                                        Margin="0,0,28,20"
                                        HorizontalAlignment="Right"
                                        VerticalAlignment="Bottom"
                                        Panel.ZIndex="4"
                                        Background="#099faf"
                                        BorderBrush="Transparent"
                                        Content="{materialDesign:PackIcon Kind=BookmarkAddOutline,
                                                                          Size=24}"
                                        Cursor="Hand"
                                        Foreground="White"
                                        IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Window}}}"
                                        PlacementMode="TopAndAlignCentres"
                                        Style="{StaticResource MaterialDesignMultiFloatingActionAccentPopupBox}"
                                        ToggleCheckedContentCommand="{Binding FloatingActionDemoCommand}"
                                        ToggleCheckedContentCommandParameter="wowsers">
                                        <materialDesign:PopupBox.ToggleCheckedContent>
                                            <materialDesign:PackIcon
                                                Width="24"
                                                Height="24"
                                                Kind="BookmarkAddOutline" />
                                        </materialDesign:PopupBox.ToggleCheckedContent>
                                        <StackPanel>
                                            <Button
                                                x:Name="BtnAbrirFormPagos"
                                                Click="BtnAbrirFormPagos_Click"
                                                Content="1"
                                                ToolTip="Agregar" />
                                        </StackPanel>
                                    </materialDesign:PopupBox>
                                    <!--#endregion-->
                                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                                        <Grid>
                                            <!--#region Lista de metodos de pago-->
                                            <ListBox
                                                x:Name="ListBoxMetodosPagos"
                                                Height="455"
                                                Margin="0,50,0,0"
                                                AllowDrop="True"
                                                Background="Transparent">
                                                <ListBox.ItemsPanel>
                                                    <ItemsPanelTemplate>
                                                        <UniformGrid Columns="3" />
                                                    </ItemsPanelTemplate>
                                                </ListBox.ItemsPanel>
