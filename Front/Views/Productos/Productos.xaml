<UserControl
    x:Class="Front.Views.Productos.Productos"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Front.Views.Productos"
    xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:materialDesignMahApps="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:system="clr-namespace:System;assembly=mscorlib"
    Width="795"
    Height="558"
    FontFamily="{DynamicResource MaterialDesignFont}"
    mc:Ignorable="d">

    <Border Background="White">
        <materialDesign:Card>
            <Grid>
                <Button
                    Name="BtnAgregarCategoria"
                    Margin="10,10,729,492"
                    Panel.ZIndex="3"
                    Click="BtnAgregarCategoria_Click"
                    Cursor="Hand"
                    Style="{StaticResource MaterialDesignFloatingActionAccentButton}">
                    <materialDesign:PackIcon
                        Width="24"
                        Height="24"
                        Kind="Plus" />
                </Button>
                <Frame Name="FrameAgregarCategoria" Margin="0,71,0,0" />
                <TabControl
                    materialDesign:ColorZoneAssist.Mode="PrimaryMid"
                    materialDesign:NavigationRailAssist.SelectionCornerRadius="50 10 10 10"
                    materialDesign:NavigationRailAssist.ShowSelectionBackground="True"
                    Style="{StaticResource MaterialDesignNavigationRailTabControl}"
                    TabStripPlacement="Top">

                    <TabItem Margin="100,0,0,0">
                        <TabItem.Header>
                            <TextBlock Text="A" />
                        </TabItem.Header>
                        <TextBlock />
                    </TabItem>

                </TabControl>
            </Grid>
        </materialDesign:Card>

    </Border>
</UserControl>
