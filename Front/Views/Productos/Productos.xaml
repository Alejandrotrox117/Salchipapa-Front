<UserControl
    x:Class="Front.Views.Productos.Productos"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Front.Views.Productos"
    xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:materialDesignMahApps="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:system="clr-namespace:System;assembly=mscorlib"
    Width="795"
    Height="558"
    FontFamily="{DynamicResource MaterialDesignFont}"
    mc:Ignorable="d">
    <Border Background="White">
        <materialDesign:Card>
            <TabControl
                x:Name="TabControlItem"
                HorizontalContentAlignment="Left"
                ItemsSource="{Binding Categories}">

                <TabControl.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding categorie}" />
                    </DataTemplate>
                </TabControl.ItemTemplate>
                <TabControl.ContentTemplate>

                    <DataTemplate>

                        <Grid>
                            <TextBlock Text="{Binding producto}" />
                        </Grid>

                    </DataTemplate>
                </TabControl.ContentTemplate>

                <!--<TabItem Header="Todas las categorias">
                    <TextBlock Text="HEADER 1" />
                </TabItem>-->




                <!--<system:String>Item #1</system:String>
                <system:String>Item #2</system:String>
                <system:String>Item #3</system:String>
                <system:String>Item #4</system:String>-->
            </TabControl>
        </materialDesign:Card>


    </Border>
</UserControl>
