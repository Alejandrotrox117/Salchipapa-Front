<UserControl
    x:Class="Front.Views.Clientes.Clientes"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Front.Views.Clientes"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Width="795"
    Height="558"
    Background="Transparent"
    mc:Ignorable="d">

    <Border Background="White">
        <Grid x:Name="GridClientes">
            <!--#region Filas y columnas-->
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="20" />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition Width="20" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="45" />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition Height="20" />
            </Grid.RowDefinitions>
            <!--#endregion Filas y columnas-->
            <!--#region Contenido-->
            <TextBlock
                Grid.Row="0"
                Grid.Column="2"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontSize="40"
                Foreground="#00695c"
                Text="Clientes" />
            <DataGrid
                x:Name="DataGridClientes"
                Grid.Row="1"
                Grid.RowSpan="3"
                Grid.Column="1"
                Grid.ColumnSpan="3"
                Width="755"
                Height="346"
                Margin="0,10,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Background="GhostWhite"
                CanUserAddRows="False"
                CanUserDeleteRows="False"
                CanUserReorderColumns="False"
                CanUserResizeRows="False"
                CanUserSortColumns="False"
                FontSize="15"
                Foreground="#00695c"
                HeadersVisibility="All"
                HorizontalGridLinesBrush="#00695c"
                Initialized="DataGridClientes_Initialized"
                ItemsSource="{Binding Source=clientes}"
                RowBackground="Transparent" SelectionMode="Single">
                <DataGrid.Columns>
                    <DataGridTemplateColumn Header="Opciones" >
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <DockPanel>
                                    <Button
                                        Name="BtnEliminar"
                                        Width="50"
                                        Background="#f44c58"
                                        BorderBrush="Transparent" Click="BtnEliminar_Click">
                                        <materialDesign:PackIcon Foreground="White" Kind="Delete" />
                                    </Button>
                                    <Button
                                        Name="BtnEditar"
                                        Width="50"
                                        Background="#00695c"
                                        BorderBrush="Transparent">
                                        <materialDesign:PackIcon Foreground="White" Kind="Pencil" />
                                    </Button>
                                </DockPanel>
                            </DataTemplate>

                        </DataGridTemplateColumn.CellTemplate>

                    </DataGridTemplateColumn>
                    <!--<DataGridTextColumn Header="{Binding Cedula}" />
                    <DataGridTextColumn Header="{Binding Nombre}" />
                    <DataGridTextColumn Header="{Binding Apellido}" />
                    <DataGridTextColumn Header="{Binding Telefono}" />
                    <DataGridTextColumn Header="{Binding Direccion}" />-->

                </DataGrid.Columns>
            </DataGrid>

            <Button
                x:Name="BtnAgregar"
                Grid.Row="3"
                Grid.Column="3"
                Width="70"
                Height="70"
                Margin="0,0,0,20"
                VerticalAlignment="Bottom"
                Background="#00695c"
                BorderBrush="Transparent"
                Click="BtnAgregar_Click"
                Cursor="Hand"
                Style="{StaticResource MaterialDesignFloatingActionMiniAccentButton}">
                <materialDesign:PackIcon
                    Width="50"
                    Height="50"
                    Foreground="White"
                    Kind="ClipboardPlusOutline" />
            </Button>



            <!--#endregion DatagridClientes-->
            <Frame
                x:Name="FrameClientes"
                Grid.RowSpan="5"
                Grid.ColumnSpan="5"
                Margin="0,10,10,10" />
        </Grid>
    </Border>
</UserControl>
