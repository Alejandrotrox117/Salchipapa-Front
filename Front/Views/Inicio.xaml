<UserControl
    x:Class="Front.Views.Inicio"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Front.Views"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:materialDesignMahApps="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Width="795"
    Height="558"
    Background="Transparent"
    mc:Ignorable="d">
    <Border Background="White">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Image Grid.Column="0" Source="/Views/logo.png" Stretch="Uniform" Margin="192,241,64,241"/>
            <TextBlock
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Text="Hierba Santa" 
                FontSize="35" Style="{StaticResource PrimaryColor}" Margin="299,0,0,0" Grid.ColumnSpan="2"/>
        </Grid>
    </Border>

</UserControl>
